{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "trestle-transport: ruff",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "source .venv/bin/activate && ruff check ."
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": "$ruff"
        },
        {
            "label": "trestle-transport: pytest",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "source .venv/bin/activate && pytest"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": "$pytest"
        }
    ]
}
