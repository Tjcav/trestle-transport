{
    "extends": [
        "config:base"
    ],
    "regexManagers": [
        {
            "fileMatch": [
                "^\\.trestle/standards\\.version$"
            ],
            "matchStrings": [
                "(?<currentValue>[0-9a-f]{7,40}|v\\d+\\.\\d+\\.\\d+)"
            ],
            "datasourceTemplate": "github-commits",
            "depNameTemplate": "tjcav/trestle-spec",
            "versioningTemplate": "loose"
        }
    ]
}